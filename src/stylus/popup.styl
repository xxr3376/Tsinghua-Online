@import "_normalize.styl"
@import "_font-awesome.styl"

support-for-ie = false
vendors = webkit official

@import "nib"

$width = 144px
$height = 16px

html,
body
	font 12px "微软雅黑"
	-webkit-user-select none

.separator
	height 0
	margin 3px 2px
	border 0
	border-top 1px solid #ddd
.item,
.item-free,
.ip-item
	display block
	margin 0 2px
	padding 4px 25px 4px 6px
	line-height $height
	width $width
	position relative
	border 1px solid transparent
	border-radius 5px
	cursor pointer
	& i.actived
		opacity 0
	&.active i.actived
		opacity 1
	&:hover
		border 1px solid #CCC
		background linear-gradient(top, 0% white, 40% rgb(242, 246, 252), 41% rgb(236, 242, 248) )
		& i.actived
			opacity 0.3
	&:active
		border 1px solid #ABC
		background linear-gradient(top, 0% #e8eef4, 100% #f5f9f4)
	span.text
		left 32px
		position absolute
	i[class^="icon"]
		font-size 16px
		color: #28C
.item
	height $height
.ip-item
	height 2 * $height
	& i
		color #7d2f31 !important
	.ip
		position absolute
		top 5px
		left 30px
		color #444
	.info
		position absolute
		top 1.5 * $height
		left 30px
		width 80%
	.flow
		float right
.item-free
	padding 4px
	width $width + 23px
	text-align center
	img
		margin 8px auto
		display block
	.text
		font-size 16px
		padding 6px 10px
#error
	.text
		color #7d2f31
	i[class^="icon"]
		color #7d2f31
.loading
	text-align center
